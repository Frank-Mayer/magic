{
  "version": "1.1.3-release",
  "release": {
    "branches": [
      "master"
    ]
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "commit": "cz",
    "semantic-release": "semantic-release --branches master"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "name": "@frank-mayer/magic",
  "repository": {
    "type": "git",
    "url": "https://github.com/Frank-Mayer/photon.git"
  },
  "bugs": {
    "url": "https://github.com/Frank-Mayer/photon/issues"
  },
  "homepage": "https://github.com/Frank-Mayer/photon#readme",
  "type": "module",
  "author": "Frank-Mayer",
  "module": "dist/magic.esm.js",
  "size-limit": [
    {
      "path": "dist/magic.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/magic.esm.js",
      "limit": "20 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.1",
    "semantic-release": "^17.4.5",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
